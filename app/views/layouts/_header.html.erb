<header class="border-bottom bg-header">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <% if admin_signed_in? %>
        <a class="col navbar-brand" href="/admin"><span>ながのCAKE</span></a>
      <% else %>
        <a class="col navbar-brand" href="/"><span>ながのCAKE</span></a>
      <% end %>

      <% if customer_signed_in? %>
        <p class="col mb-0">ようこそ<%= current_customer.last_name %>さん</p>
      <% end %>

      <div class="d-flex flex-column mt-2">
        <button class="col-3 align-self-center navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "マイページ", customers_my_page_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "商品一覧", items_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "カート", cart_items_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_customer_session_path,method: :delete,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>

          <% elsif admin_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "商品一覧", admin_items_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "会員一覧", admin_customers_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <!--注文履歴一覧のパス-->
              <%= link_to "注文履歴一覧", admin_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ジャンル一覧", admin_genres_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_admin_session_path,method: :delete,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>

          <% else %>
            <li class="text-center mx-2">
              <%= link_to "About",  about_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "商品一覧", items_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "新規登録", new_customer_registration_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログイン", new_customer_session_path,class: 'nav-link text-dark border rounded rounded-3' %>
            </li>
          <% end %>
          </ul>
        </div>

        <div class="d-flex flex-row-reverse mt-2">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :content, placeholder: 'Search' %>
            <%= f.submit "検索", class: 'btn-sm btn-primary' %>
          <% end %>
        </div>
      </div>

    </div>
  </nav>
</header>