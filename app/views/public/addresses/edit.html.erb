<div class='container'>
  <%= render "layouts/errors", obj: @address %>

  <h4 class="mb-4">配送先編集</h4>

  <div>
  	<%= form_with model: @address,local:true do |f| %>
      <div class="row mb-3">
        <div class="col-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
        <div class="col-3"><%= f.text_field :postal_code, class: 'form-control' %></div>
      </div>
      <div class="row mb-3">
        <div class="col-3"><%= f.label :address, "住所" %></div>
        <div class="col-6"><%= f.text_field :address, class: 'form-control' %></div>
      </div>
      <div class="row mb-3">
        <div class="col-3"><%= f.label :name, "宛名" %></div>
        <div class="col-3"><%= f.text_field :name, class: 'form-control' %></div>
        <div class="col-5 d-md-flex justify-content-md-end">
          <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>