<div class="container">
  <%= render "layouts/errors", obj: @address %>

  <h4>配送先登録/一覧</h4>

  <div class="row">
      <%= form_with model: @address,local:true do |f| %>
        <div class="row mb-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-sm-6 col-form-label" %>
          <div class="col-sm-6">
            <%= f.text_field :postal_code, class:"form-control" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :address, "住所", class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :address, class:"form-control" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :name, "宛名", class:"col-sm-6 col-form-label" %>
          <div class="col-sm-5">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-sm btn-success' %>
              <%= link_to "削除する", address, method: :delete, class: "btn btn-sm btn-danger"%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>