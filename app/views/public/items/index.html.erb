<div class="container">
  <div class="row">
    <%= render 'genre', items: @items %>
    <div class="">
      <h2>商品一覧</h2>
      <p>(全<%= @items.count %>件)</p>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div>
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.image, size: '200x100' %>
            <% end %>
          </div>
          <p><%= item.name %></p>
          <p>¥<%= item.price %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
