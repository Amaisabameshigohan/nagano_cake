<div class ="container">
  <div class="row mb-3">
    <h4 class="col-auto bg-light">注文情報入力</h4>
  </div>
  <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
  <div class="">
    <div class="col-2 col-form-label font-weight-bold">支払方法</div>
    <div class="col-10 form-group">
      <%= f.radio_button :payment_method, 'credit_card' %>
      <%= f.label :payment_method, 'クレジットカード' %>
      <br>
      <%= f.radio_button :payment_method, 'transfer' %>
      <%= f.label :payment_method, '銀行振込' %>
    </div>
  </div>
  <div class="">
    <div class="col-2 col-form-label font-weight-bold">お届け先</div>

    <div class="">
      <%= f.radio_button :select_address, 0 %>
      <%= f.label :customer_address, 'ご自身の住所' %><br>
      〒<%= current_customer.postal_code %>
      <%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %>
    </div>
    <div class="">
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :record_address, '登録済み住所から選択' %><br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
    <div class="">
      <%= f.radio_button :select_address, 2 %>
      <%= f.label :new_address, '新しいお届け先' %>
    </div>
    <div class="form-group">
      <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
      <%= f.text_field :postal_code, class: 'col-lg-2', placeholder: '0000000' %>
    </div>
    <div class="form-group">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, class: 'col-lg-4', placeholder: '東京都港区赤坂2−１' %>
    </div>
    <div class="form-group">
      <%= f.label :name, '宛名' %>
      <%= f.text_field :name, class: 'col-lg-2', placeholder: '令和道子' %>
    </div>
    <div class="col-12">
      <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
</div>