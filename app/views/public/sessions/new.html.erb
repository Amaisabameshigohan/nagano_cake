<div class='container'>
  <div class='row mt-4'>
    <div class='col'>
      <h4>ログイン</h4>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_session_path do |f| %>

  <table>
    <tbody>
      <tr>
        <td>
          <div class='row mt-5'>
            <div class='col'>
              <p>会員の方はこちらからログイン</p>
            </div>
          </div>
        </td>
        <td></td>
      </tr>



      <tr>
        <td vertical-align "middle">メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, size: "50", autocomplete: "email", placeholder:"sample@example.com" %></td>
      </tr>

      <tr>
        <td vertical-align "middle">パスワード</td>
        <td><%= f.password_field :password, autocomplete: "current-password", size: "50" %></td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit "ログイン",class: "mt-3 btn btn-primary px-5" %></td>
      </tr>

    </tbody>
  </table>
  <% end %>


<div class='row mt-5'>
  <p>会員登録がお済みでない方</p>
</div>

<div class='row ml-5'>
  <%= render "public/shared/links" %>
</div>

</div>