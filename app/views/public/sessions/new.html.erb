<div class='container'>
  <div class='row'><h4>ログイン</h4></div>

  <div class='row'><p>　会員の方はこちらからログイン</p></div>

  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='row'>
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  
    <div class='row'>
      <div class="field">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>


    <div class='row'>
      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-primary" %>
      </div>
    </div>  
  <% end %>

    <div class='row'>
      <p>会員登録がお済みでない方</p>
    </div>

    <div class='row'>
      <%= render "public/shared/links" %>
    </div>

</div>