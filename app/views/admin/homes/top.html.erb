<div class="container">
  <div class="row">

<h4 class="col-auto bg-light">注文履歴一覧</h4>

      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td>
              <!--%= order.数量.sum(:amount) %>-->
            </td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>