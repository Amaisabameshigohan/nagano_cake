<div class="container m-5 mx-auto">
  <%= render '/layouts/errors', obj: @genre %>
    <div class="row">
        <h3 class="col-3 text-center">ジャンル一覧・追加</h3>
    </div>
    <div class="ml-5">
    <%= form_with model: [:admin, @genre], local: true do |f| %>
       <div class="row">
            <div class="col-2 col-form-label font-weight-bold">ジャンル名</div>
            <div class="col-3">
               <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: 'ジャンル名' %>
            </div>
            <div class="col-2">
              <%= f.submit "新規登録",class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
        </div>



    <div class="row">
      <div class="col-11 mt-3">
          <div class="row">
              <div class="col-5">
                   <table class="table table-hover table-inverse">
                        <thead class="table-secondary">
                            <tr>
                              <th>ジャンル</th>
                              <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @genres.each do |genre| %>
                              <tr>
                                <td>
                                  <%= genre.name %>
                                </td>
                                <td>
                                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
                                </td>
                              </tr>
                            <% end %>

                        </tbody>
                    </table>

               </div>
          </div>
      </div>
    </div>

</div>