<%= form_with model: [:admin, item] do |f| %>
  <div class="form-group">
    <%= f.label :image, '商品画像' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :image, '商品名' %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :image, '商品説明', class: 'align-top' %>
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">
    <%= f.label :image, 'ジャンル' %>
    <%= f.select :genre_id, genres.map{ |genre| [genre.name, genre.id]}, { include_blank: '-- 選択してください --'} %>
  </div>
  <div class="form-group">
    <%= f.label :image, '税抜価格' %>
    <%= f.text_field :price %>
  </div>
  <div class="form-group">
    <%= f.label :image, '販売ステータス' %>
    <%= f.radio_button :is_active, 'sale' %>
    <%= f.label :is_active, '販売中' %>
    <%= f.radio_button :is_active, 'stop_selling' %>
    <%= f.label :is_active, '販売停止中' %>
  </div>
  <div class="text-center">
    <% if Item.exists?(item.id) %>
      <%= f.submit '変更を保存する', class: 'btn btn-success' %>
    <% else %>
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>