<div class="row">
  <div class="col-12">
<%= form_with model: [:admin, item] do |f| %>
  <div class="row mb-2">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :image, '商品画像' %>
    </div>
    <div class="col-5">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :name, '商品名', class: "col-form-label" %>
    </div>
    <div class="col-5">
      <%= f.text_field :name, class: "form-control", placeholder: '商品名' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :introduction, '商品説明', class: 'col-form-label' %>
    </div>
    <div class="col-5">
      <%= f.text_area :introduction, class: 'form-control', style: "height:8rem;", placeholder: 'ここに説明文を記述します' %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :genre_id, 'ジャンル', class: "col-form-label" %>
    </div>
    <div class="col-5">
      <%= f.select :genre_id, genres.map{ |genre| [genre.name, genre.id]}, { include_blank: '-- 選択してください --'}, class: 'form-control'  %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :image, '税抜価格', class: "col-form-label" %>
    </div>
    <div class="col-5">
      <%= f.text_field :price, class: 'form-control', placeholder: '1000' %>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.label :is_active, '販売ステータス' %>
    </div>
    <div class="col-5">
      <%= f.radio_button :is_active, 'sale' %>
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, 'stop_selling' %>
      <%= f.label :is_active, '販売停止中' %>
    </div>
  </div> <div class="row">
    <div class="col-4"></div>
  <div class="col-5 text-center">
    <% if Item.exists?(item.id) %>
      <%= f.submit '変更を保存する', class: 'btn btn-success' %>
    <% else %>
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>
</div>
</div>