<div class="container m-5">
  <div class="row">
    <h2>商品詳細</h2>
    <div>
      <%= image_tag @item.image, size: '250x150' %>
      <p>商品名</p>
      <%= @item.name %>
      <p>商品説明</p>
      <%= @item.introduction %>
      <p>ジャンル</p>
      <%= @item.genre.name %>
      <p>
        税込価格<br>
        (税抜価格)
      </p>
      <%= (@item.price * 1.1).floor %>(<%= @item.price %>)
      <p>販売ステータス</p>
      <%= @item.is_active_i18n %>
    </div>
    <%= link_to '編集する', edit_admin_item_path(@item.id) %>
  </div>
</div>