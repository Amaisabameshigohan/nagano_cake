<table class="table table-borderless border-top border-bottom">
  <thead class="bg-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id), class: 'text-dark' do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <% if item.is_active != 'sale' %>
          <td class="text-secondary"><strong><%= item.is_active_i18n %></strong></td>
        <% else %>
          <td class="text-success"><strong><%= item.is_active_i18n %></strong></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>